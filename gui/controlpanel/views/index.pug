include mixins

doctype
html( lang="en" )
head
  title ATOS Control Panel
  meta( charset='utf-8' )
  meta( name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" )
  link(rel='stylesheet' href='/stylesheets/style.css')
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

body(style="padding-bottom:10rem;")
  script(type='text/javascript' src='/javascripts/client.js')
  .container-fluid
    +statusIcon("pending", "ATOS Not connected")
    .d-grid(class="gap-1 d-sm-block")
      +button("danger", "xl", onClick='sendAbort()') Abort
    .d-grid(class="gap-1 d-sm-block")
      +button("info", "sm", onClick='sendInit()') Init
      +button("info", "sm", onClick='sendConnect()') Connect
      +button("secondary", "sm", onClick='sendResetTest()') Disconnect
      +button("warning", "sm", onClick='sendArm()') Arm
      +button("warning", "sm", onClick='sendDisarm()') Disarm
      +button("success", "sm", onClick='sendStart()') Start
      +button("secondary", "sm", onClick='sendAllClear()') Clear Abort

    
    +p("State: Undefined", "OBCState")

script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")